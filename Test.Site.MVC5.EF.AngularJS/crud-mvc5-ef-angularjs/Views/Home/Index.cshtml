<div class="container" ng-controller="employeeCtrl">
    <div class="panel panel-info">
        <div class="panel-heading">Listagem de Funcionários - Tutorial CRUD</div>
        <table class="table table-bordered">
            <thead style="background-color: burlywood">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Departamento</th>
                    <th>Cargo</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="func in Employees">
                    <td>{{func.Id}}</td>
                    <td>{{func.Name}}</td>
                    <td>{{func.Email}}</td>
                    <td>{{func.Departament}}</td>
                    <td>{{func.Office}}</td>
                    <td style="width: 200px">
                        <a href="#" class="btn btn-info">Atualizar</a>
                        <a href="#" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script src="~/AngularJsApp/Employee/Module.js"></script>
    <script src="~/AngularJsApp/Employee/Service.js"></script>
    <script src="~/AngularJsApp/Employee/Controller.js"></script>
}